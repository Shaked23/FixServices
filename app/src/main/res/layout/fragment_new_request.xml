<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wal"
    android:orientation="vertical"
    tools:context=".fragments.NewRequestFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="305dp"
        android:layout_height="63dp"
        android:background="@drawable/purple_red"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:text="Description"
        android:textColor="#081B85"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="236dp"
        android:layout_height="29dp"
        android:gravity="bottom|center_horizontal"
        android:shadowColor="@color/black"
        android:text="Please select a domain"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#83D6E1"
        android:textIsSelectable="false"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <Spinner
        android:id="@+id/spinnerDomain"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:background="@drawable/blue"
        android:contextClickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="256dp"
        android:layout_height="34dp"
        android:gravity="bottom|center_horizontal"
        android:shadowColor="@color/black"
        android:text="Please select a description"
        android:textColor="#83D6E1"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <Spinner
        android:id="@+id/spinnerDescription"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:background="@drawable/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Your Location"
        android:textColor="#83D6E1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

    <Button
        android:id="@+id/buttonLocation"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:text="Location"
        android:textColor="#83D6E1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        app:strokeColor="#83D6E1"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:gravity="bottom|center_horizontal"
        android:shadowColor="@color/black"
        android:text="Please click on location button"
        android:textColor="#83D6E1"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722" />

    <Button
        android:id="@+id/backBtn"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="111dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:text="Back"
        android:textColor="#83D6E1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:strokeColor="#83D6E1"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/sendBtn"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="111dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:text="Send"
        android:textColor="#83D6E1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:strokeColor="#83D6E1"
        app:strokeWidth="3dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="380dp"
        android:layout_height="225dp"
        android:src="@drawable/de"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

</androidx.constraintlayout.widget.ConstraintLayout>